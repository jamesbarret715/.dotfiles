#
# alacritty config - https://github.com/alacritty/alacritty
#

env:
  TERM: xterm-256color

shell:
  program: /bin/zsh
  args:
    - --login

window:
  padding:
    x: 10
    y: 10

  opacity: 1

  decorations:   none
  title:         alacritty
  dynamic_title: true  

font: 
  normal:
    family: Fira Code
    style:  Regular

draw_bold_text_with_bright_colors: false

colors:
  primary:
    background: %background%
    foreground: %foreground%

  normal:
    black:   %cl0%
    red:     %cl1%
    green:   %cl2%
    yellow:  %cl3%
    blue:    %cl4%
    magenta: %cl5%
    cyan:    %cl6%
    white:   %cl7%

  bright:
    black:   %cl8%
    red:     %cl9%
    green:   %cl10%
    yellow:  %cl11%
    blue:    %cl12%
    magenta: %cl13%
    cyan:    %cl14%
    white:   %cl15%

cursor:
  style:          Block
  vi_mode_style:  Underline
  blinking:       On
  blink_interval: 1000
